</span><span class="c1">#&gt; /_cat/recovery/{index}</span><span class="w">
</span><span class="c1">#&gt; /_cat/health</span><span class="w">
</span><span class="c1">#&gt; /_cat/pending_tasks</span><span class="w">
</span><span class="c1">#&gt; /_cat/aliases</span><span class="w">
